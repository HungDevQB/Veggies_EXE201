@model List<Veggies_EXE201.Models.ViewModels.ProductListViewModel.ProductItem>
@{
    ViewData["Title"] = "Trang Chủ";
}

<style>
    .hero-section {
        background: linear-gradient(90deg, #198754, #20c997);
        color: white;
        padding: 5rem 0;
    }

        .hero-section h1 {
            font-size: 3.5rem;
        }

        .hero-section .btn-light {
            font-weight: 600;
        }

        .hero-section .btn-outline-light {
            font-weight: 600;
        }

    .hero-image-overlay {
        position: absolute;
        bottom: 1rem;
        left: 1rem;
        background-color: rgba(0, 0, 0, 0.5);
        padding: 0.5rem 1rem;
        border-radius: 0.5rem;
    }

    .product-card .card-img-top {
        height: 200px;
        object-fit: cover;
    }
</style>

<div class="container-fluid hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6"><h1 class="display-4 fw-bold mb-4">Thực phẩm xanh sạch cho sức khỏe gia đình</h1><p class="lead mb-4">Chúng tôi cung cấp những sản phẩm thực phẩm hữu cơ, tươi ngon và an toàn nhất từ các trang trại địa phương uy tín.</p><div><a asp-controller="Product" asp-action="Index" class="btn btn-light btn-lg px-4 py-3 me-3">Mua sắm ngay</a><a href="#" class="btn btn-outline-light btn-lg px-4 py-3">Tìm hiểu thêm</a></div></div>
            <div class="col-lg-6 mt-4 mt-lg-0"><div class="position-relative"><img src="https://images.unsplash.com/photo-1542838132-92c53300491e?q=80&w=1974&auto=format&fit=crop" class="img-fluid rounded shadow-lg" alt="Rau củ tươi"><div class="hero-image-overlay"><i class="fas fa-star text-warning"></i> từ 2.500+ đánh giá</div></div></div>
        </div>
    </div>
</div>

<div class="container mt-5 py-5">
    <h2 class="fw-bold mb-4">Gợi ý cho bạn</h2>
    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var product in Model)
            {
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="card h-100 shadow-sm border-0 product-card">
                        <img src="@product.ProductImage" class="card-img-top" alt="@product.ProductName" onerror="this.onerror=null;this.src='https://placehold.co/400x200/e9f7ef/38c172?text=Veggies';">
                        <div class="card-body text-center d-flex flex-column">
                            <h5 class="card-title"><a asp-controller="Product" asp-action="Details" asp-route-id="@product.ProductId" class="text-dark text-decoration-none">@product.ProductName</a></h5>
                            <p class="text-muted small">@product.CategoryName</p>
                            <p class="card-text fs-5 fw-bold text-success mt-auto">@string.Format("{0:N0}", product.Price) VNĐ</p>
                            <a href="#" class="btn btn-success mt-3"><i class="fas fa-shopping-cart me-2"></i>Mua hàng</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-muted">Chưa có sản phẩm nào để gợi ý.</p>
        }
    </div>
</div>