@using System.Text.Json
@{
    ViewData["Title"] = "Thống kê Bán hàng";
    Layout = "_SellerLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-chart-line text-primary"></i> Thống kê Bán hàng</h2>
    <div class="btn-group">
        <button type="button" class="btn btn-outline-primary dropdown-toggle" data-bs-toggle="dropdown">
            <i class="fas fa-calendar"></i> Khoảng thời gian
        </button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="?period=7">7 ngày qua</a></li>
            <li><a class="dropdown-item" href="?period=30">30 ngày qua</a></li>
            <li><a class="dropdown-item" href="?period=90">3 tháng qua</a></li>
            <li><a class="dropdown-item" href="?period=365">1 năm qua</a></li>
        </ul>
    </div>
</div>

<!-- Revenue Chart -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-chart-area text-success"></i> Biểu đồ Doanh thu
                </h5>
            </div>
            <div class="card-body">
                <canvas id="revenueChart" height="100"></canvas>
            </div>
        </div>
    </div>
</div>

<!-- Top Products -->
<div class="row">
    <div class="col-lg-8 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-trophy text-warning"></i> Sản phẩm bán chạy nhất
                </h5>
            </div>
            <div class="card-body">
                @if (ViewData["TopProducts"] != null)
                {
                    var topProducts = ViewData["TopProducts"] as IEnumerable<dynamic>;
                    if (topProducts.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Xếp hạng</th>
                                        <th>Tên sản phẩm</th>
                                        <th>Số lượng bán</th>
                                        <th>Doanh thu</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int rank = 1;
                                    }
                                    @foreach (var product in topProducts)
                                    {
                                        <tr>
                                            <td>
                                                @if (rank <= 3)
                                                {
                                                    <span class="badge @(rank == 1 ? "bg-warning" : rank == 2 ? "bg-secondary" : "bg-warning")">
                                                        <i class="fas fa-medal"></i> @rank
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-light text-dark">@rank</span>
                                                }
                                            </td>
                                            <td>
                                                <strong>@product.ProductName</strong>
                                            </td>
                                            <td>
                                                <span class="badge bg-primary">@product.TotalSold</span>
                                            </td>
                                            <td>
                                                <span class="text-success fw-bold">@(((decimal)product.TotalRevenue).ToString("N0")) VNĐ</span>
                                            </td>
                                        </tr>
                                        rank++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-chart-bar fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Chưa có dữ liệu thống kê</p>
                        </div>
                    }
                }
            </div>
        </div>
    </div>

    <!-- Summary Stats -->
    <div class="col-lg-4 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-info-circle text-info"></i> Tóm tắt
                </h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6 mb-3">
                        <div class="border-end">
                            <h4 class="text-primary mb-1">@ViewData["TotalProducts"]</h4>
                            <small class="text-muted">Sản phẩm</small>
                        </div>
                    </div>
                    <div class="col-6 mb-3">
                        <h4 class="text-success mb-1">@ViewData["TotalOrders"]</h4>
                        <small class="text-muted">Đơn hàng</small>
                    </div>
                    <div class="col-12">
                        <hr>
                        <h5 class="text-success">@((ViewData["TotalRevenue"] as decimal?)?.ToString("N0") ?? "0") VNĐ</h5>
                        <small class="text-muted">Tổng doanh thu</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-bolt text-primary"></i> Thao tác nhanh
                </h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="CreateProduct" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Thêm sản phẩm
                    </a>
                    <a asp-action="ManageOrders" class="btn btn-success">
                        <i class="fas fa-shopping-cart"></i> Xem đơn hàng
                    </a>
                    <a asp-action="ManageProducts" class="btn btn-info">
                        <i class="fas fa-box"></i> Quản lý sản phẩm
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Revenue Chart
        const monthlyStats = @Html.Raw(Json.Serialize(ViewData["MonthlyStats"]));
        
        if (monthlyStats && monthlyStats.Revenue) {
            const revenueData = monthlyStats.Revenue;
            const labels = revenueData.map(item => item.Month);
            const revenue = revenueData.map(item => item.Revenue);
            const orderCount = revenueData.map(item => item.OrderCount);

            const ctx = document.getElementById('revenueChart').getContext('2d');
            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Doanh thu (VNĐ)',
                        data: revenue,
                        borderColor: 'rgb(75, 192, 192)',
                        backgroundColor: 'rgba(75, 192, 192, 0.1)',
                        tension: 0.1,
                        yAxisID: 'y'
                    }, {
                        label: 'Số đơn hàng',
                        data: orderCount,
                        borderColor: 'rgb(255, 99, 132)',
                        backgroundColor: 'rgba(255, 99, 132, 0.1)',
                        tension: 0.1,
                        yAxisID: 'y1'
                    }]
                },
                options: {
                    responsive: true,
                    interaction: {
                        mode: 'index',
                        intersect: false,
                    },
                    scales: {
                        x: {
                            display: true,
                            title: {
                                display: true,
                                text: 'Tháng'
                            }
                        },
                        y: {
                            type: 'linear',
                            display: true,
                            position: 'left',
                            title: {
                                display: true,
                                text: 'Doanh thu (VNĐ)'
                            }
                        },
                        y1: {
                            type: 'linear',
                            display: true,
                            position: 'right',
                            title: {
                                display: true,
                                text: 'Số đơn hàng'
                            },
                            grid: {
                                drawOnChartArea: false,
                            },
                        }
                    }
                }
            });
        } else {
            // Show empty state
            document.getElementById('revenueChart').getContext('2d').fillText('Chưa có dữ liệu', 10, 50);
        }

        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}
