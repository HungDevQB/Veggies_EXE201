@model Veggies_EXE201.Models.ViewModels.ProductListViewModel
@{
    ViewData["Title"] = "Trang Sản Phẩm";
}

<style>
    /* CSS tùy chỉnh cho trang sản phẩm */
    :root {
        --veg-green: #198754; /* Bootstrap's success color */
        --veg-light-green: #e9f7ef;
    }

    .filter-sidebar {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0 4px 12px rgba(0,0,0,.05);
        margin-bottom: 20px;
        position: sticky;
        top: 20px;
    }

    .filter-group {
        border-bottom: 1px solid #e9ecef;
        padding-bottom: 15px;
        margin-bottom: 15px;
    }

        .filter-group:last-child {
            border-bottom: none;
        }

    .filter-title {
        color: var(--veg-green);
        font-weight: 700;
        margin-bottom: 15px;
        font-size: 1.15rem;
    }

    .form-check-input:checked {
        background-color: var(--veg-green);
        border-color: var(--veg-green);
    }

    .product-card {
        border: none;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,.1) !important;
        }

        .product-card .card-img-top {
            height: 200px;
            object-fit: cover;
        }

        .product-card .card-title a {
            color: #343a40;
            text-decoration: none;
            transition: color .2s;
        }

            .product-card .card-title a:hover {
                color: var(--veg-green);
            }

    .pagination .page-item.active .page-link {
        background-color: var(--veg-green);
        border-color: var(--veg-green);
    }

    .pagination .page-link {
        color: var(--veg-green);
    }
</style>

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb bg-transparent p-0">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
            <li class="breadcrumb-item active" aria-current="page">Danh sách Sản phẩm</li>
        </ol>
    </nav>
    <h1 class="display-5 fw-bold mb-3">Thực Phẩm Hữu Cơ & Sạch</h1>

    <div class="row">
        <div class="col-lg-3">
            <div class="filter-sidebar">
                <form id="filterForm" asp-controller="Product" asp-action="Index" method="get">
                    <input type="hidden" name="sortBy" value="@Model.CurrentSort" />
                    <input type="hidden" name="pageNumber" value="1" />
                    <div class="filter-group">
                        <div class="filter-title">Tìm kiếm</div>
                        <div class="input-group">
                            <input type="text" class="form-control" name="searchTerm" value="@Model.SearchTerm" placeholder="Tìm sản phẩm..." />
                            <button type="submit" class="btn btn-success"><i class="fas fa-search"></i></button>
                        </div>
                    </div>
                    <div class="filter-group">
                        <div class="filter-title">Danh mục</div>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="radio" name="categoryId" value="" id="category_all" onchange="this.form.submit()" @(Model.CategoryId == null ? "checked" : "") />
                            <label class="form-check-label" for="category_all">Tất cả</label>
                        </div>
                        @foreach (var category in Model.Categories)
                        {
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="radio" name="categoryId" value="@category.CategoryId" id="category_@category.CategoryId" onchange="this.form.submit()" @(Model.CategoryId == category.CategoryId ? "checked" : "") />
                                <label class="form-check-label" for="category_@category.CategoryId">@category.CategoryName</label>
                            </div>
                        }
                    </div>
                    <div class="filter-group">
                        <div class="filter-title">Khoảng giá</div>
                        <div class="mb-2"><label for="minPrice" class="form-label">Từ</label><input type="number" class="form-control" name="minPrice" id="minPrice" value="@Model.MinPrice" placeholder="VD: 10000"></div>
                        <div><label for="maxPrice" class="form-label">Đến</label><input type="number" class="form-control" name="maxPrice" id="maxPrice" value="@Model.MaxPrice" placeholder="VD: 50000"></div>
                    </div>
                    <button type="submit" class="btn btn-success w-100">Áp dụng bộ lọc</button>
                    <a asp-controller="Product" asp-action="Index" class="btn btn-link w-100 text-secondary mt-2">Xóa bộ lọc</a>
                </form>
            </div>
        </div>
        <div class="col-lg-9">
            <div class="d-flex justify-content-between align-items-center mb-3 p-3 bg-white rounded shadow-sm">
                <p class="text-muted mb-0">Hiển thị @Model.Products.Count() trong @Model.TotalItems sản phẩm</p>
                <div class="dropdown">
                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">Sắp xếp</button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="@Url.Action("Index", new { sortBy = "name_asc", searchTerm = Model.SearchTerm, categoryId = Model.CategoryId, minPrice = Model.MinPrice, maxPrice = Model.MaxPrice })">Tên: A-Z</a></li>
                        <li><a class="dropdown-item" href="@Url.Action("Index", new { sortBy = "name_desc", searchTerm = Model.SearchTerm, categoryId = Model.CategoryId, minPrice = Model.MinPrice, maxPrice = Model.MaxPrice })">Tên: Z-A</a></li>
                        <li><a class="dropdown-item" href="@Url.Action("Index", new { sortBy = "price_asc", searchTerm = Model.SearchTerm, categoryId = Model.CategoryId, minPrice = Model.MinPrice, maxPrice = Model.MaxPrice })">Giá: Tăng dần</a></li>
                        <li><a class="dropdown-item" href="@Url.Action("Index", new { sortBy = "price_desc", searchTerm = Model.SearchTerm, categoryId = Model.CategoryId, minPrice = Model.MinPrice, maxPrice = Model.MaxPrice })">Giá: Giảm dần</a></li>
                    </ul>
                </div>
            </div>
            <div class="row">
                @if (Model.Products.Any())
                {
                    @foreach (var product in Model.Products)
                    {
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card h-100 shadow-sm border-0 product-card">

                                <img src="@product.ProductImage" class="card-img-top" alt="@product.ProductName" onerror="this.onerror=null;this.src='https://placehold.co/400x200/e9f7ef/38c172?text=Veggies';">

                                <div class="card-body text-center d-flex flex-column">
                                    <h5 class="card-title">
                                        <a asp-controller="Product" asp-action="Details" asp-route-id="@product.ProductId">@product.ProductName</a>
                                    </h5>
                                    <p class="text-muted small">@product.CategoryName</p>
                                    <p class="card-text fs-5 fw-bold text-success mt-auto">@string.Format("{0:N0}", product.Price) VNĐ</p>

                                    <form asp-controller="Cart" asp-action="AddToCart" method="post">
                                        <input type="hidden" name="productId" value="@product.ProductId" />
                                        <button type="submit" class="btn btn-success w-100 mt-3">
                                            <i class="fas fa-shopping-cart me-2"></i>Mua hàng
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12"><div class="alert alert-warning text-center">Không tìm thấy sản phẩm nào.</div></div>
                }
            </div>
            @if (Model.TotalPages > 1)
            {
                <nav class="d-flex justify-content-center mt-4">
                    <ul class="pagination">
                        <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")"><a class="page-link" href="@Url.Action("Index", new { pageNumber = Model.CurrentPage - 1, searchTerm = Model.SearchTerm, categoryId = Model.CategoryId, sortBy = Model.CurrentSort, minPrice = Model.MinPrice, maxPrice = Model.MaxPrice })">&laquo;</a></li>
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")"><a class="page-link" href="@Url.Action("Index", new { pageNumber = i, searchTerm = Model.SearchTerm, categoryId = Model.CategoryId, sortBy = Model.CurrentSort, minPrice = Model.MinPrice, maxPrice = Model.MaxPrice })">@i</a></li>
                        }
                        <li class="page-item @(Model.HasNextPage ? "" : "disabled")"><a class="page-link" href="@Url.Action("Index", new { pageNumber = Model.CurrentPage + 1, searchTerm = Model.SearchTerm, categoryId = Model.CategoryId, sortBy = Model.CurrentSort, minPrice = Model.MinPrice, maxPrice = Model.MaxPrice })">&raquo;</a></li>
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>