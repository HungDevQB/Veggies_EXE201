@model Veggies_EXE201.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Đăng Ký Tài Khoản";
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Veggies</title>
    <!-- Thêm Bootstrap CSS để đảm bảo các class như form-control, btn hoạt động -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" xintegrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <style>
        body {
            background-color: #f0f2f5; /* Màu nền nhẹ, hiện đại */
            font-family: 'Inter', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            padding: 20px 0;
            overflow-y: auto;
        }
        .container{
            margin-left: 550px;
        }

        .register-card {
            background-color: #ffffff;
            border-radius: 16px; /* Bo góc lớn hơn */
            padding: 40px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05); /* Bóng đổ mềm hơn */
            width: 100%;
            max-width: 580px; /* Chiều rộng phù hợp với form 2 cột */
        }

        .form-group {
            margin-bottom: 1rem; /* Giảm khoảng cách giữa các nhóm form */
        }

        .form-control, .form-select {
            border-radius: 8px;
            padding: 12px 15px; /* Tăng padding */
            border: 1px solid #ced4da;
            transition: border-color 0.3s, box-shadow 0.3s;
        }

            .form-control:focus, .form-select:focus {
                border-color: #38c172;
                box-shadow: 0 0 0 0.25rem rgba(56, 193, 114, 0.25);
            }

        .btn-register {
            background-color: #38c172 !important;
            border: none;
            border-radius: 8px;
            padding: 12px;
            font-size: 1.1rem;
            font-weight: 600;
            transition: background-color 0.3s, transform 0.1s;
            letter-spacing: 0.5px;
        }

            .btn-register:hover {
                background-color: #2b9e5e !important;
                transform: translateY(-1px);
            }

        /* Styling cho thông báo nhỏ dưới trường */
        .input-hint {
            font-size: 0.85rem;
            color: #6c757d;
            margin-top: 5px;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .register-card {
                padding: 25px;
                max-width: 95%;
            }

            .row > div.form-group {
                margin-bottom: 1rem;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="register-card">
                    <h1 class="text-center mb-2" style="color: #212529; font-weight: 700;">Đăng Ký Tài Khoản</h1>
                    <p class="text-center text-muted mb-4">Trải nghiệm mua sắm nông sản sạch cùng Green Fresh!</p>

                    <!-- Form Đăng Ký -->
                    <form asp-action="Register">

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                        <!-- HÀNG 1: Họ tên đầy đủ -->
                        <div class="row">
                            <div class="col-md-12 form-group">
                                <label asp-for="FullName" class="form-label">Họ và tên</label>
                                <input asp-for="FullName" class="form-control" placeholder="Nhập họ và tên đầy đủ" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- HÀNG 2: Email / Điện thoại -->
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" class="form-control" placeholder="username@example.com" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 form-group">
                                <label asp-for="Phone" class="form-label">Điện thoại</label>
                                <input asp-for="Phone" class="form-control" type="tel" placeholder="Nhập số điện thoại" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- HÀNG 3: Ngày sinh / Giới tính -->
                        <div class="row">
                            <!-- Ngày sinh (Tùy chọn) -->
                            <div class="col-md-6 form-group">
                                <label asp-for="DateOfBirth" class="form-label">Ngày sinh (Tùy chọn)</label>
                                <input asp-for="DateOfBirth" class="form-control" type="date" />
                                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                            </div>

                            <!-- Giới tính (Tùy chọn) -->
                            <div class="col-md-6 form-group pt-4">
                                <label asp-for="Gender" class="form-label d-block">Giới tính (Tùy chọn)</label>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" asp-for="Gender" id="Nam" value="Nam">
                                    <label class="form-check-label" for="Nam">Nam</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" asp-for="Gender" id="Nu" value="Nữ">
                                    <label class="form-check-label" for="Nu">Nữ</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" asp-for="Gender" id="Khac" value="Khác">
                                    <label class="form-check-label" for="Khac">Khác</label>
                                </div>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>
                        </div>

                        <hr class="mt-4 mb-4">

                        <!-- MẬT KHẨU -->
                        <div class="form-group">
                            <label asp-for="Password" class="form-label">Mật khẩu</label>
                            <input asp-for="Password" class="form-control" type="password" />
                            <span class="input-hint">Mật khẩu phải có ít nhất 8 ký tự, bao gồm chữ hoa, chữ thường và số</span>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <!-- NHẬP LẠI MẬT KHẨU -->
                        <div class="form-group">
                            <label asp-for="ConfirmPassword" class="form-label">Nhập lại mật khẩu</label>
                            <input asp-for="ConfirmPassword" class="form-control" type="password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <!-- VAI TRÒ (Giữ lại từ code cũ) -->
                        <div class="form-group mb-4">
                            <!-- Ẩn vai trò nếu không muốn hiển thị cho người dùng cuối -->
                            <label asp-for="SelectedRole" class="form-label">Vai trò</label>
                            <select asp-for="SelectedRole" asp-items="ViewBag.AvailableRoles" class="form-control form-select">
                                <option value="" disabled selected>-- Chọn vai trò --</option>
                            </select>
                            <span asp-validation-for="SelectedRole" class="text-danger"></span>
                        </div>

                        <!-- Checkbox cho Điều khoản và Ưu đãi -->
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" value="" id="dieuKhoan" required>
                            <label class="form-check-label" for="dieuKhoan">
                                Tôi đồng ý với <a href="#" style="color: #38c172; font-weight: 500;">Điều khoản dịch vụ</a>
                            </label>
                        </div>
                        <div class="form-check mb-4">
                            <input class="form-check-input" type="checkbox" value="" id="nhanTin">
                            <label class="form-check-label" for="nhanTin">
                                Đăng ký nhận bản tin và ưu đãi qua email (Tùy chọn)
                            </label>
                        </div>


                        <!-- Nút Đăng ký -->
                        <div class="form-group d-grid">
                            <input type="submit" value="Tạo tài khoản" class="btn btn-register btn-lg" />
                        </div>

                        <!-- Chuyển hướng Đăng nhập -->
                        <p class="text-center mt-4">
                            Đã có tài khoản? <a asp-action="Login" class="text-success" style="font-weight: 600;">Đăng nhập ngay</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Thêm Bootstrap JS nếu cần các tính năng JS của Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" xintegrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
